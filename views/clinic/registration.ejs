<%- include('../partials/header');%>


   
    
        <div class="container">
    
       
      <%- include('../partials/messages');%>
            <h1>Register Your Clinic</h1>
            <p>Please fill in this form to create an account.</p>
            
            <div class="col s12">
                <div class="row">
                    <form enctype="multipart/form-data" action="registration" method="post">
                    <div class="uploadImage">
    
                        <img  width="250" src="../../public/images/Clinic/clinic.jpg">
                        <div class="file-field input-field">
                            <div  class="btn">
                              <span>File</span>
                              <input name="clinic_img" type="file" id="clinic_img" accept="image/*">
                            </div>
                            <div class="file-path-wrapper" style="width:200px;">
                              <input id="file" class="file-path validate" type="text">
                            </div>
                            </div>
                    </div>
                </div>
            </div>
            <div class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        <label for="Name"><b>Clinic Name</b></label>
                        <input type="text" placeholder="Clinic Name" name="Clinicname" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="Number"><b>Registeration Number</b></label>
                        <input type="number" placeholder="Registeration Number" name="Registernumber" required>
                    </div>
                </div>
            </div>
            <div class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        <label for="ABN"><b>ABN</b></label>
                        <input type="text" placeholder="ABN Number" name="ABN" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="Phone"><b>Phone Number</b></label>
                        <input type="number" placeholder="Phone Number" name="Phone" required>
                    </div>
                </div>
            </div>
            <div class="col s12">
                <div class="row ">
                    <div class="input-field col offset-s3 s6">
                        <label for="Date"><b>Start date</b></label>
                        <input type="date" placeholder="Date" name="Date" required>
                    </div>
                </div>
            </div>
            <hr>
            <div class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        <label for="Address"><b>Address</b></label>
                        <input type="text" placeholder="Your Address" name="Address" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="Code"><b>Zip Code</b></label>
                        <input type="number" placeholder="Your Postal Code" name="Code">
                    </div>
                </div>
            </div>
            <div class="input-field col s6">
                <p> <label for="textarea">Clinic Services</label></p>
                <textarea id="textarea" class="materialize-textarea" data-length="1000" name="textarea"></textarea>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit </button>
        </div>
     </form>
    
     <script src="../../public/js/clinic/clinic.js"></script>

  