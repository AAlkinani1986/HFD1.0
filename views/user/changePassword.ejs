

<div class="middle container">

    <!-- Start container -->
    
       
        <div class="row">
            <%- include('../partials/messages');%> 
            <h4 class="card-title mt-3 text-center">Change password</h4>
            <p class="text-center">Please enter your new password using the form below!</p>
         
            <form  action="/user/changePassword/<%=userId%>/<%=resetToken%>" autocomplete="off" method="POST">
            <div class="input-field col s12">
            <i class="material-icons prefix">lock</i>
                <input name="password" id="new_password" type="password" class="validate<%=locals.errors && errors.includes('password') ? 'is-invalid' : ''%>"
                autocomplete="new-password" value="<%=locals.data && data.password ? data.password : '' %>">
            <label for="new_password">New Password min 8 characters</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock</i>
            <input name="confirmPassword" id="confirm_password" type="password" class="validate<%=locals.errors && errors.includes('password') ? 'is-invalid' : ''%>"
            value="<%=locals.data && data.confirmPassword ? data.confirmPassword : '' %>">
            <label for="confirm_password">Confirm Password</label>
          </div>
        </div>
        <div class="row">
          <div class="col s12 center-align">
            <button class="btn waves-effect waves-light" type="submit">Change Password
              <i class="material-icons  c_white right">send</i>
            </button>
          </div>
        </div>
      </form>
 <!-- End container -->
</div>